# MySQL 500MB Memory Master Server

[client]
port   = 3306
socket = /var/lib/mysql/mysql.sock

[mysqld]
# --------------------------------------
server-id = 101
# --------------------------------------
pid-file = /var/lib/mysql/mysql.pid
port     = 3306
socket   = /var/lib/mysql/mysql.sock
skip-external-locking
skip-name-resolve
explicit_defaults_for_timestamp = true

# --------------------------------------
# connection & packet
# --------------------------------------
max_connections    = 20
max_connect_errors = 9999999
max_allowed_packet = 1M

# --------------------------------------
# global buffer
# --------------------------------------
key_buffer_size   = 8M
net_buffer_length = 16K

# --------------------------------------
# thread buffer
# --------------------------------------
sort_buffer_size        = 256K
myisam_sort_buffer_size = 256K
read_buffer_size        = 512K
join_buffer_size        = 512K
read_rnd_buffer_size    = 512K

# --------------------------------------
# tmp table
# --------------------------------------
tmp_table_size      = 16M
max_heap_table_size = 16M

# --------------------------------------
# thread
# --------------------------------------
thread_cache_size  = 1

# --------------------------------------
# query_cache
# --------------------------------------
query_cache_size  = 0
query_cache_limit = 1M


# --------------------------------------
# table_cache
# --------------------------------------
table_open_cache = 2048

# --------------------------------------
# other setting
# --------------------------------------
default-storage-engine = InnoDB
wait_timeout           = 28800
#slave-skip-errors      = 1062

# --------------------------------------
# bin
# --------------------------------------
log-bin   = /var/lib/mysql/mysql-bin
log-error = /var/lib/mysql/mysql.log
#binlog_format=mixed
expire_logs_days = 10
max_binlog_size  = 1GB
#log-slave-updates

# --------------------------------------
# query log
# --------------------------------------
log-output       = FILE
general_log      = 0
general_log_file = /var/lib/mysql/mysql-queries

# --------------------------------------
# slow_query
# --------------------------------------
slow_query_log      = 0
long_query_time     = 0.5
#log-queries-not-using-indexes
slow-query-log-file = /var/lib/mysql/mysql-slow-queries


# --------------------------------------
# innodb
# --------------------------------------
innodb_file_per_table

innodb_data_home_dir            = /var/lib/mysql
innodb_data_file_path           = ibdata1:2000M;ibdata2:2000M:autoextend
innodb_log_group_home_dir       = /var/lib/mysql
innodb_buffer_pool_size         = 64M
innodb_log_buffer_size          = 1M
innodb_log_file_size            = 1024M
innodb_log_files_in_group       = 3
innodb_additional_mem_pool_size = 12M
innodb_thread_concurrency       = 14
innodb_flush_log_at_trx_commit  = 1
innodb_lock_wait_timeout        = 20

[mysqldump]
quick
max_allowed_packet = 16M

[mysql]
no-auto-rehash
#safe-updates

[myisamchk]
key_buffer_size  = 512M
sort_buffer_size = 512M
read_buffer  = 1M
write_buffer = 1M

[mysqlhotcopy]
interactive-timeout

[mysqld_safe]
open-files-limit = 8192




